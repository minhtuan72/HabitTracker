<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->

    <item
        android:left="5dp"
        android:top="5dp">
        <shape>
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item
        android:bottom="3dp"
        android:right="3dp"
        >
        <shape>
            <padding
                android:left="10dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />
            <stroke
                android:color="#ED78A0"
                android:width="1dp" />
            <solid android:color="#ffffff" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>