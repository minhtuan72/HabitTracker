<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    app:layout_constraintCircleRadius="20dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/time_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/prev_week_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/custom_btn_background"
            android:textSize="15sp"
            android:text="@string/back"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/range_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/custom_shadow"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Feb 2021 ~ Feb 2021"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/next_week_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/custom_btn_background"
            android:textSize="15sp"
            android:text="@string/forward"
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_line"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_irv_fhome_habit_list"
        app:layout_constraintTop_toBottomOf="@+id/time_line"
        tools:layout_editor_absoluteX="20dp">


        <TableRow

            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="15sp" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="M"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="T"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="W"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="T"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="F"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="S"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_weight="1"
                android:background="@drawable/custom_shadow_5"
                android:gravity="center"
                android:text="S"
                android:textSize="15sp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>